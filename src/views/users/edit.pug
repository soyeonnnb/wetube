extends ../base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="name", placeholder="name", type="text", required, value=user.name)
        input(name="email", placeholder="email", type="email", required, value=user.email)
        input(name="username", placeholder="username", type="text", required, value=user.username)
        input(name="location", placeholder="location", type="text")
        input(type="submit", value="Update Profile")