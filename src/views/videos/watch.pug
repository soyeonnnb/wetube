extends ../base
block content 
    video(width="320", height="240", src="/"+video.fileUrl, controls)
    div
        p=video.description
        p #{video.meta.views} #{video.meta.views === 1 ? "view" : "views"}
        ul
            each hashtag in video.hashtags
                li #{hashtag}
    a(href=`${video.id}/edit`) Edit Video &rarr;
    br
    a(href=`${video.id}/delete`) Delete Video &rarr;
    