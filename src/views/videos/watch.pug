extends ../base
block content 
    div#videoContainer.videoContainer
        video.watch(src="/"+video.fileUrl)
        div#videoControls.videoControls
            span#play.playBtn
                i.fa-solid.fa-play
            div.timeline
                span#currentTime.timeline-current 00:00:00
                span /
                span#totalTime.timeline-total 00:00
            input(type="range", step="1", value="0", min="0")#timeline.timeline-range
            span#mute.muteBtn
                i.fa-solid.fa-volume-high
            input(type="range", step="0.1", value="0.5", min="0", max="1")#volume.volumeRange
            
            span#fullscreen.fullscreenBtn  
                i.fa-solid.fa-expand
        
    div.video__data
        ul.video__hashtags
            each hashtag in video.hashtags
                li #{hashtag}
        h2.video__name=video.title
        a(href="/users/"+video.owner._id).video__owner
            div.video__owner-avatar
                if video.owner.avatar
                    img(src="/"+video.owner.avatar)
                else
                    i.fa-solid.fa-user
            span #{video.owner.username}      
        p.video__description=video.description
        p.video__views #{video.meta.views} #{video.meta.views === 1 ? "view" : "views"}
        
        
    if String(video.owner._id) === String(user._id)
        a(href=`${video.id}/edit`) Edit Video &rarr;
        br
        a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts 
    script(src="/static/js/videoPlayer.js")