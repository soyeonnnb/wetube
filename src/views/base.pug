doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="http://unpkg.com/mvp.css")
    body
        header 
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") Home 
                    li
                        a(href="/videos/upload") Upload 
                    li
                        a(href="/search") Search 
                    if loggedIn 
                        li 
                            a(href="/logout") Log Out
                        li
                            a(href="/my-profile") #{loggedInUser.name}의 프로필
                    else 
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
        main 
            block content
        include partials/footer.pug